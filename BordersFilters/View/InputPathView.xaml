<UserControl
    x:Class="BordersFilters.View.InputPathView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BordersFilters"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <viewModel:InputPathViewModel />
    </UserControl.DataContext>
    <Grid>
        <StackPanel>
            <TextBlock
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                TextAlignment="Center">
                Выбор изображения
            </TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="textBox"
                    Grid.Column="0"
                    Margin="{StaticResource 'Margin All'}"
                    Text="{Binding PathValue, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    x:Name="btnBrowse"
                    Grid.Column="1"
                    Margin="{StaticResource 'Margin All'}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                    Click="btnBrowse_OnClick"
                    Style="{DynamicResource MaterialDesignRaisedButton}">
                    Browse
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
