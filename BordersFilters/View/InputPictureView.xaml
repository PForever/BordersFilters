<UserControl
    x:Class="BordersFilters.View.InputPictureView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BordersFilters.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <viewModel:InputPictureViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <Thickness x:Key="Margin All">4, 4, 4, 4</Thickness>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <StackPanel Margin="{StaticResource 'Margin All'}">
            <TextBlock VerticalAlignment="Top" TextAlignment="Center">Исходное изображение</TextBlock>
            <Image VerticalAlignment="Center" Source="{Binding InputImageSource}" />
        </StackPanel>
    </Grid>
</UserControl>
