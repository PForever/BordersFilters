<Window
    x:Class="BordersFilters.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BordersFilters"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
    xmlns:viewers="clr-namespace:BordersFilters.View"
    Title="MainWindow"
    Width="720"
    Height="640"
    MinWidth="500"
    MinHeight="630"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
    TextElement.FontSize="12"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:ViewModel />
    </Window.DataContext>
    <Grid>
        <materialDesign:Transitioner AutoApplyTransitionOrigins="True" SelectedIndex="0">
            <materialDesign:TransitionerSlide>
                <materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:SlideWipe Direction="Right" />
                </materialDesign:TransitionerSlide.ForwardWipe>
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <viewers:InputPathView Grid.Row="0" VerticalAlignment="Stretch" />
                        <viewers:ChoseAlgorithmView Grid.Row="1" VerticalAlignment="Stretch" />
                    </Grid>
                    <Button
                        Grid.Row="1"
                        Width="{StaticResource ButtomWidth}"
                        Height="{StaticResource ButtomHeight}"
                        MinWidth="{StaticResource ButtomWidth}"
                        MinHeight="{StaticResource ButtomHeight}"
                        Margin="{StaticResource 'Margin All'}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                        Command="{Binding Start}"
                        Content="Start"
                        FontSize="12"
                        Style="{DynamicResource MaterialDesignRaisedButton}" />
                    <Button
                        Grid.Row="1"
                        Width="{StaticResource ButtomWidth}"
                        Height="{StaticResource ButtomHeight}"
                        MinWidth="{StaticResource ButtomWidth}"
                        MinHeight="{StaticResource ButtomHeight}"
                        Margin="{StaticResource 'Margin All'}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                        Command="{x:Static materialDesign:Transitioner.MoveNextCommand}"
                        Content="К результатам"
                        FontSize="12"
                        Style="{DynamicResource MaterialDesignRaisedButton}" />
                </Grid>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:SlideWipe Direction="Left" />
                </materialDesign:TransitionerSlide.BackwardWipe>
                <Grid Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <viewers:OutPictureView Grid.Row="0" />
                    <Button
                        Grid.Row="1"
                        Width="{StaticResource ButtomWidth}"
                        Height="{StaticResource ButtomHeight}"
                        MinWidth="{StaticResource ButtomWidth}"
                        MinHeight="{StaticResource ButtomHeight}"
                        Margin="{StaticResource 'Margin All'}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                        Command="{x:Static materialDesign:Transitioner.MovePreviousCommand}"
                        Content="К параметрам"
                        FontSize="12"
                        Style="{DynamicResource MaterialDesignRaisedButton}" />
                    <Button
                        Grid.Row="1"
                        Width="{StaticResource ButtomWidth}"
                        Height="{StaticResource ButtomHeight}"
                        MinWidth="{StaticResource ButtomWidth}"
                        MinHeight="{StaticResource ButtomHeight}"
                        Margin="{StaticResource 'Margin All'}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        materialDesign:ShadowAssist.ShadowDepth="Depth2"
                        Command="{Binding Save}"
                        Content="Сохранить"
                        FontSize="12"
                        Style="{DynamicResource MaterialDesignRaisedButton}"
                        ToolTip="Сохраняется в //Debug если директория не выбрана" />
                </Grid>
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
        <materialDesign:Snackbar HorizontalAlignment="Center" MessageQueue="{Binding messageQueue}" />
    </Grid>
</Window>
