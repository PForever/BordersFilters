<Window
    x:Class="BordersFilters.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BordersFilters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
    xmlns:viewers="clr-namespace:BordersFilters.View"
    Title="MainWindow"
    Width="700"
    Height="850"
    MinWidth="350"
    MinHeight="700"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:ViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <Thickness x:Key="Margin All">4, 4, 4, 4</Thickness>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <viewers:InputPathView />
            <viewers:ChoseAlgorithmView />
            <Button
                MinWidth="100"
                MinHeight="28"
                HorizontalAlignment="Center"
                Command="{Binding Start}">
                <TextBlock
                    Margin="{StaticResource 'Margin All'}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="Start" />
            </Button>
        </StackPanel>
        <viewers:OutPictureView Grid.Row="1" />
    </Grid>
</Window>
