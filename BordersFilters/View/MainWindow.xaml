<Window
    x:Class="BordersFilters.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BordersFilters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
    xmlns:viewers="clr-namespace:BordersFilters.View"
    Title="MainWindow"
    Width="700"
    Height="800"
    MinWidth="300"
    MinHeight="800"
    mc:Ignorable="d">
    <!--  Height="{Binding WindowHeight, Mode=TwoWay}" Width="{Binding WindowsWidth, Mode=TwoWay}"  -->
    <Window.DataContext>
        <viewModel:ViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <viewers:InputPathView />
            <viewers:ChoseAlgorithmView />
            <Button
                MinWidth="90"
                HorizontalAlignment="Center"
                Command="{Binding Start}">
                Start
            </Button>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <viewers:InputPictureView Grid.Column="0" VerticalAlignment="Top" />
                <viewers:OutPictureView Grid.Column="1" VerticalAlignment="Top" />
            </Grid>
        </StackPanel>

    </Grid>
</Window>
